<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yedam.mapper.Bookmapper">
    <select id="selectBook" resultType="com.yedam.vo.Book" parameterType="int">
        select * from book where id = #{id}
    </select>
    
    <select id = "selectBooks" resultType = "com.yedam.vo.Book" useCache="false" flushCache="true" parameterType = "int">
    	SELECT b.*
		  FROM (SELECT ROWNUM rn
		             , a.*
		          FROM (SELECT book.*
		                  FROM book
		                 ORDER BY id) a
		       ) b
		 WHERE rn > (#{page} - 1) * 5
		   <![CDATA[AND rn <= #{page} * 5]]>
		   
    </select>
    
    <!-- resultType은 int 고정 -->
    <insert id = "insertBook" parameterType = "com.yedam.vo.Book">
    	insert into book (id, title, author, price)
    	values (#{id}, #{title}, #{author}, #{price})
    </insert>
    
    <delete id = "deleteBook" parameterType = "int">
    	delete from book where id = #{id}
    </delete>
</mapper>